    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Elemen Utama
            const welcomeScreen = document.getElementById('welcome-screen');
            const enterBtn = document.getElementById('enter-btn');
            const header = document.getElementById('main-header');
            const homepage = document.getElementById('homepage');

            // Kontrol Suara & Tema
            const themeToggleBtn = document.getElementById('theme-toggle-btn');
            const themeIcon = document.getElementById('theme-icon');
            
            let isLightMode = false; // Default is Dark Mode (Panggung Malam)
            
            // --- Fungsionalitas Theme Toggle (Cahaya Panggung) ---
            const toggleTheme = () => {
                isLightMode = !isLightMode;
                if (isLightMode) {
                    document.body.classList.add('light-mode');
                    header.style.backgroundColor = 'rgba(216, 240, 255, 0.8)';
                    header.style.color = 'var(--text-dark)';
                    themeIcon.textContent = 'ðŸŒ™'; 
                    themeToggleBtn.title = "Panggung Gelap";
                } else {
                    document.body.classList.remove('light-mode');
                    header.style.backgroundColor = 'rgba(27, 27, 54, 0.8)';
                    header.style.color = 'white';
                    themeIcon.textContent = 'ðŸ”†'; 
                    themeToggleBtn.title = "Panggung Terang";
                }
            };

            // --- Fungsionalitas Header Sticky ---
            const toggleHeaderVisibility = () => {
                if (window.scrollY > homepage.offsetHeight / 2) { 
                    header.classList.add('visible');
                } else {
                    header.classList.remove('visible');
                }
            };

            // --- Logika Halaman Sambutan (Login) dan Transisi INSTAN ---
            enterBtn.addEventListener('click', () => {
                // 1. Welcome Screen Fade Out
                welcomeScreen.style.opacity = '0';
                
                // 2. Transisi INSTAN ke halaman utama
                setTimeout(() => {
                    welcomeScreen.style.display = 'none';
                    document.body.style.overflowY = 'auto'; 
                    
                    // Inisiasi header setelah konten terlihat
                    window.addEventListener('scroll', toggleHeaderVisibility);
                    toggleHeaderVisibility(); 
                    
                }, 500); // Waktu transisi opacity welcome screen (minimalis)
            });


            // --- Event Listeners ---
            
            // Set initial height for homepage
            homepage.style.height = window.innerHeight + 'px';
            window.addEventListener('resize', () => {
                homepage.style.height = window.innerHeight + 'px';
            });
            
            // Handler Tombol Theme
            themeToggleBtn.addEventListener('click', toggleTheme);
            
            // Atur konten utama agar terlihat penuh setelah welcome screen
            const mainContent = document.getElementById('main-content');
            mainContent.style.opacity = 1; 
        });
    </script>
</body>
</html>
