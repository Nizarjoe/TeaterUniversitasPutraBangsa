    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <!-- Firebase SDKs for Firestore and Auth -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, onSnapshot, query, orderBy, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Variabel Global dari Lingkungan Canvas
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');

        let db, auth;
        let userId = null; 
        let isAuthReady = false;

        // Inisialisasi Firebase
        const setupFirebase = async () => {
            try {
                const app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                
                // Cek Perubahan Status Otentikasi
                onAuthStateChanged(auth, async (user) => {
                    if (user) {
                        userId = user.uid;
                    } else {
                        // Jika token tersedia, gunakan custom token, jika tidak, sign in anonim
                        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                            await signInWithCustomToken(auth, __initial_auth_token);
                        } else {
                            await signInAnonymously(auth);
                        }
                        userId = auth.currentUser?.uid || 'anonymous-user';
                    }
                    isAuthReady = true;
                    console.log("Firebase Auth Ready. User ID:", userId);
                    setupCommentsListener(); // Mulai mendengarkan komentar setelah auth siap
                });

            } catch (e) {
                console.error("Firebase setup failed:", e);
            }
        };

        const getCommentsCollectionRef = () => {
            // Path Public: /artifacts/{appId}/public/data/comments
            return collection(db, `artifacts/${appId}/public/data/comments`);
        };

        const setupCommentsListener = () => {
            if (!isAuthReady) return;

            const commentsContainer = document.getElementById('comments-container');
            if (!commentsContainer) return;

            // Query: Ambil data, urutkan (di client side, karena orderBy rawan error index)
            const q = query(getCommentsCollectionRef());

            onSnapshot(q, (snapshot) => {
                let comments = [];
                snapshot.forEach(doc => {
                    comments.push({ id: doc.id, ...doc.data() });
                });

                // Sort data in memory (by timestamp descending)
                comments.sort((a, b) => (b.timestamp?.seconds || 0) - (a.timestamp?.seconds || 0));

                commentsContainer.innerHTML = '';
                
                if (comments.length === 0) {
                    commentsContainer.innerHTML = `<p class="text-center text-gray-500 py-4 italic">Belum ada konfirmasi kehadiran. Jadilah yang pertama!</p>`;
                } else {
                    comments.forEach(comment => {
                        const date = comment.timestamp ? new Date(comment.timestamp.seconds * 1000).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) : 'Baru saja';
                        const commentElement = document.createElement('div');
                        commentElement.className = 'p-3 bg-white/5 rounded-lg mb-3 shadow-md border-l-4 border-var(--color-light-blue-1)';
                        commentElement.innerHTML = `
                            <div class="font-bold text-var(--color-silver) flex justify-between items-center">
                                <span>${comment.name || 'Anonim'}</span>
                                <span class="text-xs font-light text-gray-500">${date}</span>
                            </div>
                            <p class="mt-1 text-sm">${comment.message}</p>
                        `;
                        commentsContainer.appendChild(commentElement);
                    });
                }
            }, (error) => {
                console.error("Error fetching comments:", error);
            });
        };

        window.addComment = async (event) => {
            event.preventDefault();
            if (!isAuthReady || !db) {
                console.error("Sistem belum siap. Coba lagi.");
                alert("Sistem belum siap. Coba lagi."); // Menggunakan alert sementara untuk notifikasi user
                return;
            }

            const nameInput = document.getElementById('comment-name');
            const messageInput = document.getElementById('comment-message');
            
            const name = nameInput.value.trim();
            const message = messageInput.value.trim();

            if (!name || !message) {
                alert("Nama dan Pesan wajib diisi.");
                return;
            }

            try {
                await addDoc(getCommentsCollectionRef(), {
                    name: name,
                    message: message,
                    timestamp: serverTimestamp(),
                    userId: userId,
                    appId: appId
                });
                
                nameInput.value = '';
                messageInput.value = '';
                alert("Konfirmasi terkirim! Pesan Anda akan muncul.");
            } catch (e) {
                console.error("Error menambahkan pesan: ", e);
                alert("Gagal mengirim konfirmasi. Periksa koneksi Anda.");
            }
        };

        // Pasang setup Firebase ke window load/DOMContentLoaded
        window.addEventListener('DOMContentLoaded', setupFirebase);
    </script>
